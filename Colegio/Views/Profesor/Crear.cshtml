@model Colegio.Models.Profesor
@{
    ViewData["Title"] = "Nuevo Profesor";
}
<div class="row">
    <div class="offset-12">
        <div class="card">
            <div class="card-header bg-dark">
                <h2 class="text-center text-white"><strong>Crear Nuevo Profesor</strong></h2>
            </div>
            <div class="card-body">
                <form asp-action="Crear" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Nombre" placeholder="Nombres">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                        <label asp-for="Nombre">Nombres</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Apellido" placeholder="Apellidos">
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                        <label asp-for="Apellido">Apellidos</label>
                    </div>
                                        
                    <div class="form-floating mb-3">
                        <select class="form-control" asp-for="IdGenero" asp-items="ViewBag.Genero">
                            <option value="">Seleccione un género</option>
                        </select>
                        <span asp-validation-for="IdGenero" class="text-danger"></span>
                        <label asp-for="IdGenero">Género</label>
                    </div>

                    <div class="form-group mt-2 d-flex justify-content-center">
                        <a class="btn btn-outline-dark btn-lg w-25 mx-2" asp-controller="Profesor" asp-action="Index">
                            <i class="fa-solid fa-arrow-left"></i> Regresar
                        </a>
                        <button class="btn btn btn-outline-primary btn-lg w-25" type="submit">
                            <i class="fa-regular fa-floppy-disk"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
