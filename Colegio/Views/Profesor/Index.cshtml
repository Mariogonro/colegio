@model IEnumerable<Colegio.Models.Profesor>
@{
    ViewData["Title"] = "Lista de Profesores";
    int contador = 1;
}

<h2 class="text-center">Lista de Profesores</h2>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a class="btn btn-outline-dark d-block mx-auto btn-lg" asp-controller="Profesor" asp-action="Crear">
            <i class="fa-solid fa-square-plus"></i> Nuevo Profesor
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Profesores</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-hover" id="tabla" width="100%" cellspacing="0">
                            <thead>
                                <tr class="bg-black">
                                    <th scope="col" class="text-white">#</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Id)</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Apellido)</th>
                                    <th scope="col" class="text-white">Opciones</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@contador</td>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Apellido)</td>
                                        <td>
                                            <a class="btn btn-outline-primary mx-2" asp-action="Detalle" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-circle-info"></i> Detalle
                                            </a>
                                            <a class="btn btn-outline-warning mx-2" asp-action="Editar" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-pen-to-square"></i> Editar
                                            </a>
                                            <a class="btn btn-outline-danger mx-2" asp-action="Eliminar" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                    contador++;
                                }
                            </thead>
                        </table>
                    }
                    else
                    {
                        <p class="text-center"><strong>No hay registros</strong></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
